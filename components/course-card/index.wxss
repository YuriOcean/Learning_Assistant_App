.tab-bar {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 96rpx;
  display: flex;
  background: white;
  box-shadow: 0 -2rpx 12rpx rgba(0,0,0,0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 8rpx 0;
}

.tab-item image {
  width: 48rpx;
  height: 48rpx;
  display: block;
  margin: 0 auto 4rpx;
}
